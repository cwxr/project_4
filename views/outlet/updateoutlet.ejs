<% layout('layout') %>
<div class="container">
  <form action="<%-outlet.id%>?_method=put" method="POST">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Update <em><%- outlet.outletname %></em> Info</h3>
      <div class="btn-group" role="group">

      </div>
    </div>
    <div class="panel-body">
      <div class="col-md-6">
          <div class="form-group">
            <label for="name">Outlet Name:</label>
            <input type="text" class="form-control" id="outletname" name="outletname" value="<%- outlet.outletname %>">
          </div>
          <div class="form-group">
            <label for="supplier">Outlet Address:</label>
            <input type="text" class="form-control" id="outletaddress" name="outletaddress" value="<%- outlet.outletaddress %>">
          </div>
          <div class="form-group">
            <label for="inventory">Outlet Number:</label>
            <input type="number" class="form-control" id="outletnumber" name="outletnumber" value="<%- outlet.outletnumber %>">
          </div>
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-default" aria-label="Left Align">
    <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
  </button>
</form>
</div>
