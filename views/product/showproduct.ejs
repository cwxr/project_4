
<div class="container">
  <h3>Show All Products</h3>
  <div class="panel panel-primary">
    <div class="panel-heading"></div>
    <div class="panel-body">
      <dl class="dl-horizontal">
        <% products.forEach((product) => { %>
            <dt><%- product.productname %></dt>
            <a href="/home/updateproduct/<%- product.id %>" class="btn btn-primary btn-sm active" role="button">Edit Product</a>

              <form action="/home/deleteproduct/<%- product.id %>?_method=delete" method="post" class='btnbox'>
                  <input type="submit" value="Delete Product" class="btn btn-primary btn-sm active" role="button"></input>
              </form>
       <% }) %>
      </dl>
    </div>
